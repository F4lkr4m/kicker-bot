{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "ES2022",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "ES2019"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@usecase/*": ["src/usecase/*"],
      "@db/*": ["src/db/*"],
      "@types/*": ["src/types/*"],
      "@tests/*": ["src/tests/*"],
      "@utils/*": ["src/utils/*"],
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  }
}